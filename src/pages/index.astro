---
import Base from '../layouts/Base.astro';
---
<Base>
    <main>
        <!-- Splash Screen -->
        <div id="splash-screen" class="fixed inset-0 z-50 flex flex-col items-center justify-center bg-gray-800 transition-opacity opacity-100" style="transition-duration: 1200ms;">
            <!-- SVG LOGO (same as original) -->
            <svg id="splash-logo" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 172 199" class="w-48 h-auto">
                <!-- ...existing inline svg defs and content... -->
            </svg>
            <div class="loading_text opacity-0 transition-opacity duration-2000 ease-in-out text-white text-center text-2xl md:text-3xl mt-8 px-4">Family Owned &amp; Operated Since 1977</div>
        </div>
    
        <!-- Top Banner Content -->
        <section class="bg-white px-4 mb-6 md:mb-4 xl:mb-8 color-copy z-0" style="z-index: -1;">
            <div class="max-width mx-auto flex flex-row flex-wrap md:flex-nowrap gap-12 items-center justify-between">
                <div class="w-full md:w-[45%]">
                    <div class="w-32 mt-30 md:mt-0 flex items-center justify-center font-semibold text-white">
                        <img src="/trion-holdings-logo.svg" alt="Trion Holdings Logo" class="w-full h-auto object-contain" decoding="async" width="471" height="547" />
                    </div>
                    <h1 class="text-3xl sm:text-4xl md:text-5xl mb-4 mt-8 md:mt-14">
                        Diversified Investment Firm in New York
                    </h1>
                    <div class="w-20 h-1 bg-[#E3BA63] mb-6"></div>
                    <p class="leading-6 text-lg mb-4">
                        Trion focuses on investing, acquiring, or partnering with businesses that have a goal of scaling their business to the next level.
                    </p>
                    <p class="leading-6 text-lg">
                        Our large network of industry professionals will be available to the business and team. Our goal will be to work together to implement a mind set of working smarter and not harder.
                    </p>
                </div>
                <div class="w-full md:w-[45%] h-1/2 md:h-full block">
                    <img src="trion-grid-1.webp" alt="Diversified Investment Firm in New York" class="w-full h-auto object-cover z-0" decoding="async" width="655" height="953" />
                </div>
            </div>
        </section>

        <!-- Section Separator -->
		<div class="w-full bg-[#1A19190D] overflow-hidden">
			<svg xmlns="http://www.w3.org/2000/svg" role="presentation" preserveAspectRatio="none" fill="none" viewBox="0 0 1512 78" class="w-full aspect-[1512/78]"><path fill="white" d="M0 0h1512L0 78V0Z"/></svg>
		</div>

        <!-- Work With Us Section -->
        <section class="bg-[#1A19190D] px-4 py-20">
            <div class=" max-width mx-auto grid md:grid-cols-2 gap-12 items-center">

                <!-- Left column -->
                <div class="w-full h-auto">
                    <img src="work-with-trion-holdings.webp" alt="Work with Trion Holdings" class="w-full object-cover" loading="lazy" decoding="async" width="950" height="634" />
                </div>

                <!-- Right column -->
                <div>
                    <h2 class="text-3xl sm:text-4xl  color-copy mb-4">
                        Work With Us
                    </h2>
                    <div class="w-20 h-1 bg-[#E3BA63] mb-10"></div>
                    <!-- Item -->
                    <div class="flex items-start gap-4 mb-8">
                        <div class="bg-[#E3BA63] rounded-full w-10 h-10 flex items-center justify-center shrink-0">
