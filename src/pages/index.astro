    <script>
      // small script to set footer year and manage splash screen similar to original
      document.addEventListener('DOMContentLoaded', () => {
        const splashScreen = document.getElementById('splash-screen');
        const yearEl = document.getElementById('year');
    if (yearEl) yearEl.textContent = String(new Date().getFullYear());
                if (splashScreen) {
                    // Fade out after the display timeout instead of abruptly hiding
                    const startFade = () => {
                        // trigger opacity transition (element already has transition-opacity)
                        splashScreen.classList.remove('opacity-100');
                        splashScreen.classList.add('opacity-0', 'pointer-events-none');

                        const onEnd = (e) => {
                            if (e.propertyName === 'opacity') {
                                splashScreen.classList.add('hidden');
                                splashScreen.removeEventListener('transitionend', onEnd);
                            }
                        };
                        splashScreen.addEventListener('transitionend', onEnd);

                        // Fallback in case transitionend doesn't fire
                        setTimeout(() => splashScreen.classList.add('hidden'), 1500);
                    };

                    setTimeout(startFade, 2600);
                }
      });
    </script>
